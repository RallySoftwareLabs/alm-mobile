<div class="row-fluid">
  <div class="span4 timeRemainingSummary" style="text-align:center">
    <span class="lead">{{ this.timeRemaining }}</span> <br>
    {{ this.timeRemainingUnits }} <br>
    Remaining
  </div>
  <div class="span4 percentAcceptedSummary" style="text-align:center">
    <span class="lead">{{ this.percentAccepted }}%</span> <br>
    Accepted <br>
    ({{ this.pointsAccepted }} of {{ this.totalPoints }} Points)
  </div>
  <div class="span4 activeDefectsSummary" style="text-align:center">
    <span class="lead">{{ this.activeDefects }}</span> <br>
    Active <br>
    Defects
  </div>
  {{#each buttons}}
  <button class="btn btn-inverse btn-block" type="button" data-target="{{ viewHash }}" style="padding-left:10px;padding-right:10px">
    <span class="span4" style="text-align:left">{{ displayName }}</span>
    <span class="span2 offset6" style="text-align:right"><i class="icon-chevron-right icon-white"></i></span>
  </button>
  {{/each}}
</div>
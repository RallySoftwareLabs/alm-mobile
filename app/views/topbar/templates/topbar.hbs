{{#unless onLoginScreen}}
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <div class="row-fluid">
        {{#if onNavigateScreen}}
          <div class="span12">
            <form class="navbar-search pull-left">
              <input type="text" class="search-query" placeholder="Search">
            </form>
          </div>
        {{else}}
          <div class="span3">{{{ this.left_button }}}</div>
          <div class="span6" style="text-align:center">{{ this.title }}</div>
          <div class="span3" style="text-align:right">{{{ this.right_button }}}</div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/unless}}
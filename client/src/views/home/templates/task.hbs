<button class="btn btn-block" id="task/{{task.ObjectID}}">
    <div class="span9 item">
        <div class={{state task.Blocked task.Ready}}></div>
        <div class="item-id-name">
            <div class="formatted-id">{{task.FormattedID}}</div>
            <div class="workitem-name">{{task.Name}}</div>
        </div>
    </div>
    <div class="span2">
        <div>
            <div class="span5 task-clock"></div>
            <div class="span7 task-to-do">{{task.ToDo}}</div>
        </div>
    </div>
    <div class="span1 chevron"><i class="icon-chevron-right"></i></div>
</button>

<div class="row" id="{{ObjectID}}" data-url="{{{typeForDetailLink _type}}}/{{ObjectID}}">
    <div class="col-xs-9 item">
        <div class="{{state Blocked Ready}}"></div>
        <div class="item-id-name">
            <a class="formatted-id">{{FormattedID}}</a>
            <div class="workitem-name">{{Name}}</div>
        </div>
    </div>
    <div class="col-xs-2 task-to-do">
        {{#if ToDo}}
        <span class="picto icon-to-do"></span>{{ToDo}}h
        {{/if}}
    </div>
    <div class="col-xs-1 chevron"><i class="picto icon-chevron-right"></i></div>
</div>
<div class="row-fluid">
  <div class="span4 summary timeRemainingSummary">
    <span class="lead">{{ this.timeRemaining }}</span> <br>
    {{ this.timeRemainingUnits }} <br>
    Remaining
  </div>
  <div class="span4 summary percentAcceptedSummary">
    <span class="lead">{{ this.percentAccepted }}%</span> <br>
    Accepted <br>
    ({{ this.pointsAccepted }} of {{ this.totalPoints }} Points)
  </div>
  <div class="span4 summary activeDefectsSummary">
    <span class="lead">{{ this.activeDefects }}</span> <br>
    Active <br>
    Defects
  </div>
  <div class="span12 buttons">
    {{#each buttons}}
      <button class="btn btn-inverse btn-block" type="button" data-target="{{ viewHash }}">
        <span class="span10 displayName">{{ displayName }}</span>
        <span class="span2 icon"><i class="icon-chevron-right icon-white"></i></span>
      </button>
    {{/each}}
  </div>
</div>